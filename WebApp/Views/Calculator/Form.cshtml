@model Calculator

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Kalkulator</h2>
            <form action="Result" method="post">
                <div class="mb-3">
                    <label class="form-label" for="x">Liczba 1</label>
                    <input class="form-control" type="number" name="X" step="1" id="X"/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Operator">Operator</label>
                    <select name="Operator">
                        <option value="Add">+</option>
                        <option value="Sub">&minus;</option>
                        <option value="Mul">&times;</option>
                        <option value="Div">&divide;</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="y">Liczba 2</label>
                    <input class="form-control" type="number" name="Y" step="1" id="Y"/>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Oblicz</button>
                </div>
            </form>
        </div>
    </div>
</div>
